<style>
    .wikiimage {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .wikiimage-button {
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
        border: none;
        background: none;
        position: relative;
        cursor: pointer;
        display: block;
    }

    .image-container {
        display: flex;
        height: 80vh;
        width: 100%;
        position: relative;
    }

    .half {
        flex: 1;
    }

    .image-wrapper {
        position: relative;
        width: 100%;
        height: 100%;
    }

    .overlay-text {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 100%;
        text-align: center;
        transform: translate(-50%, -50%);
        color: white;
        font-size: 4rem;
        font-weight: bold;
        text-shadow: 2px 2px 5px black;
    }

    .score-text {
        position: absolute;
        left: 50%;
        top: 80%;
        transform: translateX(-50%);
        text-align: center;
        color: white;
        font-size: 2rem;
        font-weight: bold;
        text-shadow: 2px 2px 5px black;
    }
</style>

<p>Soused√≠ to?</p>

@if (Model != null){
    <form method="post" asp-controller="Game" asp-action="ChooseBordering">
        <input type="hidden" name="answer" value="@ViewBag.Answer"></input> 
        <div class="image-container">
            <div class="overlay-text">Jde se dostat z?</div>
            <div class="half">
                <div class="image-wrapper">
                    <button type="submit" name="action" value=0 class="wikiimage-button">
                        <img class="wikiimage" src="/Images/@Model[0].Images[0]" alt="image" />
                        <div class="overlay-text">@Model[0].Title</div>
                    </button>
                </div>
            </div>
            <div class="half">
                <div class="image-wrapper">
                    <button type="submit" name="action" value=1 class="wikiimage-button">
                        <img class="wikiimage" src="/Images/@Model[1].Images[0]" alt="image" />
                        <div class="overlay-text">@Model[1].Title</div>
                    </button>
                </div>
            </div>
        </div>
    </form>
}
