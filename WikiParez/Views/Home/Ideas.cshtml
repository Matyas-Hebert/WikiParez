@{
    var colors = new List<string> {
        "rgb(201, 218, 52)",
        "rgb(153, 87, 230)",
        "rgb(52, 152, 219)",
        "rgb(231, 76, 60)",
        "rgb(46, 204, 113)",
        "rgb(241, 196, 15)"
    };
}

<div class="d-flex flex-wrap justify-content-center gap-3 mt-4">
    @for (int i = 0; i < Model.Count; i++)
    {
        var label = Model[i];
        var color = colors[i % colors.Count];
        <div class="btn btn-lg" style="background-color: @color; pointer-events: none; cursor: default;">
            @label
        </div>
    }
</div>